---
import type { Education } from "@/lib/types";
import EducationPositionItem from "./position-item.astro";

interface Props {
  education: Education;
}

const { education } = Astro.props;
---

<div class="space-y-4 p-4 not-last:border-b">
  <div class="flex items-center space-x-4 px-2">
    <span class="relative z-10 size-2 rounded-full bg-foreground/60 ring-4 ring-background"></span>
    <h3 class="text-xl font-black">
      {education.name}
    </h3>
  </div>
  <div class="space-y-4 pl-1">
    <EducationPositionItem position={education} />
  </div>
</div>
